{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },          // ← 이 줄이 정적 파일(assets)을 우선 서빙하게 합니다
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
