{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "VITE_FINNHUB_KEY": "@finnhub_key",
    "VITE_TRADINGECONOMICS_KEY": "@te_key"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}